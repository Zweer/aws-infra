{
  "name": "@zweer/aws-infra",
  "type": "commonjs",
  "version": "1.0.1",
  "description": "AWS infrastructure as code using AWS CDK",
  "author": "Niccol√≤ Olivieri Achille <n.olivieriachille@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zweer/aws-infra.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "aws-infra": "bin/aws-infra.js"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">= 22"
  },
  "scripts": {
    "lint:eslint": "eslint .",
    "lint:lockfile": "lockfile-lint",
    "lint:engines": "ls-engines",
    "lint:publish": "publint --strict",
    "lint": "concurrently npm:lint:* --prefixColors auto",
    "clean": "rimraf --glob ./{bin,lib,test}/**/*.{d.ts,js}",
    "prebuild": "npm run clean",
    "build": "tsc",
    "watch": "tsc -w",
    "release": "semantic-release",
    "test": "jest",
    "cdk": "cdk"
  },
  "lockfile-lint": {
    "path": "package-lock.json",
    "type": "npm",
    "validate-https": true,
    "allowed-hosts": [
      "npm"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "dependencies": {
    "aws-cdk-lib": "2.194.0",
    "change-case": "^4.1.2",
    "constructs": "^10.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.0",
    "@eslint-react/eslint-plugin": "^1.49.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.1014.0",
    "concurrently": "^9.1.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jest": "^29.7.0",
    "lockfile-lint": "^4.14.1",
    "ls-engines": "^0.9.3",
    "publint": "^0.3.12",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
